<?xml version='1.0' encoding='ISO-8859-1'?>
<updates>
    <update>
        <table>tbl_blog_posts</table>
        <version>0.69</version>
        <description>Added a Creative Commons Licence Field</description>
        <data>
        	<add>
    			<name>post_lic</name>
		    	<type>text</type>
    			<length>60</length>
			</add>
		</data>
	</update>
	<update>
        <table>tbl_blog_postmeta</table>
        <version>0.98</version>
        <description>Modified post metadata table to handle text elements for tagging</description>
        <data>
        	<change>
        		<post_id>
        		<type>text</type>
        			<definition>
		    			<type>text</type>
    					<length>32</length>
    				</definition>
    			</post_id>
			</change>
		</data>
	</update>
