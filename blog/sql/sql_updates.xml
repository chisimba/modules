        <table>tbl_blog_posts</table>
        <version>0.69</version>
        <description>Added a Creative Commons Licence Field</description>
        <data>
        	<add>
    			<name>post_lic</name>
		    	<type>text</type>
    			<length>60</length>
			</add>
		</data>
	</update>
	<update>
        <table>tbl_blog_postmeta</table>
        <version>0.97</version>
