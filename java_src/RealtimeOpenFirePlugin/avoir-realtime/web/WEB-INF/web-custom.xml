<?xml version='1.0' encoding='ISO-8859-1'?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <!-- Servlets -->
    <servlet>
        <servlet-name>ClientWebstartServlet</servlet-name>
        <servlet-class>org.avoir.realtime.plugins.servlets.ClientWebstartServlet</servlet-class>
    </servlet>

    <!-- Servlet mappings -->
    <servlet-mapping>
        <servlet-name>ClientWebstartServlet</servlet-name>
        <url-pattern>/chisimba</url-pattern>
    </servlet-mapping>

     <mime-mapping>
        <extension>jnlp</extension>
        <mime-type>application/x-java-jnlp-file</mime-type>
     </mime-mapping>


</web-app>
